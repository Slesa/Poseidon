<Window x:Class="StateBasedNavigation.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:vs="clr-namespace:StateBasedNavigation.Views"
        Title="MainWindow" Height="350" Width="525">

    <Grid Background="{StaticResource MainBackground}">
        <Grid MinWidth="300" MaxWidth="800">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <TextBlock HorizontalAlignment="Left" Width="Auto" Foreground="#FFFFFFFF" FontSize="24" FontFamily="Comic Sans MS" Margin="5">
                    <Run Text="Prism Chat" FontWeight="Bold"/>
                    <Run Text="State-Based Navigation Quickstart" FontWeight="Normal" FontSize="16"/>
                </TextBlock>
            </StackPanel>
            <vs:ChatView HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Grid.Row="1"/>
        </Grid>
    </Grid>
    
</Window>
