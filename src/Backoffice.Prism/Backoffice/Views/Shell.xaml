<Window x:Class="Poseidon.Backoffice.Views.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ViewModels="clr-namespace:Poseidon.Backoffice.ViewModels" 
        Height="600" Width="800"
        Icon="../Resources/Office.png"
        >
    
    <Window.Resources>
        <ViewModels:ShellViewModel x:Key="ShellViewModel" />
        <CollectionViewSource
            x:Key="Modules"
            Source="_modules">
        </CollectionViewSource>
    </Window.Resources>
    
    <Window.DataContext>
        <Binding Source="{StaticResource ShellViewModel}" />
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="140" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Image Source="{Binding AppIcon}" />
            <TextBlock Text="{Binding AppTitle}" />
        </StackPanel>
        
        <ScrollContentPresenter
            x:Name="itemGridView"
            Grid.RowSpan="2"
            >
            
        </ScrollContentPresenter>
    </Grid>
</Window>
