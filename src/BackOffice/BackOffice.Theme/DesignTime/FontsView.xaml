<UserControl x:Class="Poseidon.BackOffice.Theme.FontsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:Poseidon.BackOffice.Common.Helpers;assembly=Poseidon.BackOffice.Common"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="UserControl"
             d:DesignHeight="480"
             d:DesignWidth="640"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <helpers:SharedResourceDictionary Source="../Resources/Fonts.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="FontSize" Value="42" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="FontWeight" Value="Bold" />
            </Style>
            <Style TargetType="{x:Type TextBox}">
                <Setter Property="Margin" Value="1" />
                <Setter Property="Width" Value="100" />
                <Setter Property="Height" Value="100" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type TextBox}">
                            <Grid Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                                <Rectangle Fill="{TemplateBinding Background}" />
                                <TextBlock HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontFamily="{StaticResource Font.Title}"
                                           FontSize="20"
                                           FontStyle="{TemplateBinding FontStyle}"
                                           FontWeight="{TemplateBinding FontWeight}"
                                           Text="{TemplateBinding Text}" />
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel>

        <StackPanel>
            <TextBlock Text="Title" />
            <WrapPanel Orientation="Horizontal">
                <TextBox FontFamily="{StaticResource Font.Title}" Text="Normal" />
                <TextBox FontFamily="{StaticResource Font.Title}"
                         FontWeight="Bold"
                         Text="Bold" />
                <TextBox FontFamily="{StaticResource Font.Title}"
                         FontStyle="Italic"
                         Text="Italic" />
                <TextBox FontFamily="{StaticResource Font.Title}"
                         FontStyle="Italic"
                         FontWeight="Bold"
                         Text="BoldItalic" />
            </WrapPanel>
        </StackPanel>

        <StackPanel>
            <TextBlock Text="Normal" />
            <WrapPanel Orientation="Horizontal">
                <TextBox FontFamily="{StaticResource Font.Normal}" Text="Normal" />
                <TextBox FontFamily="{StaticResource Font.Normal}"
                         FontWeight="Bold"
                         Text="Bold" />
                <TextBox FontFamily="{StaticResource Font.Normal}"
                         FontStyle="Italic"
                         Text="Italic" />
                <TextBox FontFamily="{StaticResource Font.Normal}"
                         FontStyle="Italic"
                         FontWeight="Bold"
                         Text="BoldItalic" />
            </WrapPanel>
        </StackPanel>

    </StackPanel>

</UserControl>